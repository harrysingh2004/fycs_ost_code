# to find factorial of a number
num= int (input("Enter the number :"))
factorial=1
i=1
while (i <= num) :
	factorial = factorial*i
	i=i+1
print("The factorial is" , factorial)


# to find average of three subject
i=1
while (i<=4):
    stud_rollno=int(input("enter your roll no :"))
    name=input("enter your name :")
    mks1=int(input("enter your mks 1 :"))
    mks2=int(input("enter your mks 2 :"))
    mks3=int(input("enter your mks 3 :"))
    i=i+1
